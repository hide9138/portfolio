<div class="login">
  <h2 style="text-align: center">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <br />
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "メールアドレス",class: "form-control" %>
      <br />
    </div>

    <div class="field">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" , placeholder: "パスワード",class: "form-control" %>
      <br />
    </div>


    <div class="actions">
      <%= f.submit "ログイン" ,class: "form-control btn-info"%>
    </div>
  <% end %>
    <br />
    <section style="text-align: center">
      <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name)%><br />
    </section>
    <br />
    <section style="text-align: center">アカウントをお持ちでない方はこちらから<br /><%= link_to "新規登録", new_registration_path(resource_name) %></section>


</div>
